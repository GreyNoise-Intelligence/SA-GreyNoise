{
    "pages": { 
        "configuration": {
            "description": "Set up your add-on", 
            "title": "Configuration", 
            "tabs": [ 
                {
                    "name": "parameters",
                    "title": "GreyNoise Setup",
                    "entity": [
                        {
                            "encrypted": true, 
                            "required": true, 
                            "type": "text", 
                            "label": "API Key",
                            "field": "api_key", 
                            "defaultValue": "",   
                            "validators": [
                                {
                                    "maxLength": 8192, 
                                    "minLength": 1, 
                                    "errorMsg": "The length of the API Key should be between 1 and 8192", 
                                    "type": "string"
                                }
                            ],  
                            "options": {
                                "placeholder": ""
                            },
                            "help": "Enter the API key of GreyNoise."
                        }
                    ]
                },
                {
                    "entity": [
                        {
                            "required": true, 
                            "type": "multipleSelect", 
                            "label": "Indexes", 
                            "field": "ip_indexes",
                            "defaultValue": "main", 
                            "options": { 
                                "blackList": "^_.*$", 
                                "delimiter": ",", 
                                "endpointUrl": "data/indexes"
                            }, 
                            "help" : "Select the indexes to be scanned in the deployment."
                        },
                        {
                            "required": true, 
                            "type": "multipleSelect", 
                            "label": "CIM Fields", 
                            "field": "cim_ip_fields",      
                            "defaultValue": "all", 
                            "options": {
                                "delimiter": ",", 
                                "items": [
                                    {
                                        "value": "all", 
                                        "label": "All"
                                    }, 
                                    {
                                        "value": "dest", 
                                        "label": "dest"
                                    }, 
                                    {
                                        "value": "dvc", 
                                        "label": "dvc"
                                    }, 
                                    {
                                        "value": "src", 
                                        "label": "src"
                                    }, 
                                    {
                                        "value": "dest_ip", 
                                        "label": "dest_ip"
                                    }, 
                                    {
                                        "value": "src_ip", 
                                        "label": "src_ip"
                                    }, 
                                    {
                                        "value": "dvc_ip", 
                                        "label": "dvc_ip"
                                    },
                                    {
                                        "value": "orig_src", 
                                        "label": "orig_src"
                                    },
                                    {
                                        "value": "orig_dest", 
                                        "label": "orig_dest"
                                    },
                                    {
                                        "value": "host", 
                                        "label": "host"
                                    },
                                    {
                                        "value": "source", 
                                        "label": "source"
                                    },
                                    {
                                        "value": "dest_translated_ip", 
                                        "label": "dest_translated_ip"
                                    },
                                    {
                                        "value": "src_translated_ip", 
                                        "label": "src_translated_ip"
                                    }
                                ]
                            },
                            "help": "Select the CIM fields containing IP address to scan for noise status."
                        },
                        {
                            "required": false,
                            "type": "text",
                            "label": "Other Fields",
                            "field": "other_ip_fields", 
                            "defaultValue": "", 
                            "options": {
                                "placeholder": "Example: ip_field1,ip_field2"
                            },  
                            "help": "Enter other comma(,) separated fields containing IP address to scan for noise status.",
                            "validators": [
                                { 
                                    "maxLength": 8192,
                                    "minLength": 1, 
                                    "errorMsg": "The length of the fields should be atleast 1", 
                                    "type": "string"
                                }
                            ]
                        },
                        {
                            "required": true,
                            "type": "singleSelect", 
                            "label": "Scan Start Time",
                            "field": "scan_start_time", 
                            "defaultValue": "LAST_SEVEN_DAYS", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "Now", 
                                        "value": "NOW"
                                    },
                                    {
                                        "label": "Last 5 minutes", 
                                        "value": "LAST_FIVE_MINS"
                                    },
                                    {
                                        "label": "Last 60 minutes", 
                                        "value": "LAST_SIXTY_MINS"
                                    },
                                    {
                                        "label": "Last 24 hours", 
                                        "value": "LAST_TWENTY_FOUR_HOURS"
                                    },
                                    {
                                        "label": "Last 7 days", 
                                        "value": "LAST_SEVEN_DAYS"
                                    },  
                                    {
                                        "label": "Last 30 days", 
                                        "value": "LAST_THIRTY_DAYS"
                                    },
                                    {
                                        "label": "Last 60 days", 
                                        "value": "LAST_SIXTY_DAYS"
                                    }
                                ],
                                "disableSearch": true
                            }, 
                            "help": "Specify the time range for scanning the indexed Splunk data."
                        },
                        {
                            "field": "enable_ss", 
                            "label": "Enable Scan Deployment", 
                            "type": "checkbox", 
                            "help": "Select this checkbox to enable scanning of the deployment.", 
                            "required": false
                        },
                        {
                            "field": "force_enable_ss", 
                            "label": "Force Scan Deployment", 
                            "type": "checkbox", 
                            "help": "Select this checkbox to stop the current scan and forcefully initialize a new scan.", 
                            "required": false
                        }
                    ], 
                    "title": "Scan Deployment", 
                    "name": "scan_deployment"
                },
                {
                    "entity": [
                        {
                            "field":"enable_feed_import",
                            "type":"checkbox",
                            "label":"Enable Feed Import",
                            "defaultValue": 0,
                            "required":false,
                            "help":"Select this checkbox to enable the ingest of a GreyNoise Feed."
                        },
                        {
                            "field": "force_enable_ss",
                            "label": "Force Feed Run Now",
                            "type": "checkbox",
                            "help": "Select this checkbox to stop the current scan and forcefully initialize a new scan.",
                            "required": false
                        },
                        {
                            "required": true,
                            "type": "singleSelect",
                            "label": "Feed Selection",
                            "field": "feed_selection",
                            "defaultValue": "BENIGN",
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "Benign Indicators - Last 24 Hours",
                                        "value": "BENIGN"
                                    },
                                    {
                                        "label": "Malicious Indicators - Last 24 Hours",
                                        "value": "MALICIOUS"
                                    },
                                    {
                                        "label": "Malicious and Benign Indicators - Last 24 Hours",
                                        "value": "MALICIOUS_BENIGN"
                                    },
                                    {
                                        "label": "All Indicators",
                                        "value": "ALL"
                                    }
                                ],
                                "disableSearch": true
                            },
                            "help": "Specify the time range for scanning the indexed Splunk data."
                        }
                    ], 
                    "title": "Feed Configuration",
                    "name": "feed_configuration"
                },
                {
                    "entity": [
                        {
                            "field":"enable_caching",
                            "type":"checkbox",
                            "label":"Enable Caching",
                            "defaultValue": 1,
                            "required":false,
                            "help":"Select this checkbox to enable caching for all custom commands."
                        },
                        {
                            "field":"ttl",
                            "label":"Time to live",
                            "type":"text",
                            "required": false,
                            "defaultValue": "24",
                            "validators": [
                                {
                                    "type": "number",
                                    "range": [
                                        1,
                                        72
                                    ],
                                    "errorMsg": "Time to live should be in a range of 1 to 72"
                                },
                                {
                                    "pattern": "^\\d{1,2}$",
                                    "errorMsg": "Time to live should be a valid integer only",
                                    "type": "regex"
                                }
                            ],
                            "help":"Enter a positive integer in the range 1-72 representing the caches' Time to live (in hours)."
                        },
                        {
                            "field":"purge_cache",
                            "label":"Purge Cache",
                            "type":"checkbox",
                            "required":false,
                            "help":"Check this option to the purge the cache. After clicking the save button, the cache will be cleared."
                        }
                    ],
                    "title": "Caching",
                    "name": "caching"
                },
                {
                    "entity": [
                        {
                            "type": "singleSelect",
                            "label": "Log level", 
                            "field": "loglevel", 
                            "defaultValue": "INFO",
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG", 
                                        "value": "DEBUG"
                                    }, 
                                    {
                                        "label": "INFO", 
                                        "value": "INFO"
                                    }, 
                                    {
                                        "label": "WARNING", 
                                        "value": "WARNING"
                                    }, 
                                    {
                                        "label": "ERROR", 
                                        "value": "ERROR"
                                    }, 
                                    {
                                        "label": "CRITICAL", 
                                        "value": "CRITICAL"
                                    }
                                ], 
                                "disableSearch": true
                            }                             
                        }
                    ], 
                    "title": "Logging", 
                    "name": "logging"
                }            
            ]
        }
    }, 
    "meta": {
        "displayName": "GreyNoise App for Splunk", 
        "version": "2.1.5",
        "restRoot": "app_greynoise", 
        "name": "SA-GreyNoise", 
        "apiVersion": "3.0.0"
    }
}